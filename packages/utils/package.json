{
  "name": "@qiaoyuwen-core/utils",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "build": "rimraf -rf ./dist && tsc",
    "test": "jest -w 16 --coverage",
    "test-live": "DEBUG_MODE=1 jest --watch tests/types-spec.ts"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "typescript": "~4.5.4",
    "rimraf": "~3.0.2",
    "@qiaoyuwen-core/eslint": "~1.0.0",
    "@rushstack/eslint-patch": "~1.1.0",
    "jest": "~26.0.1",
    "ts-jest": "~26.0.0",
    "@types/jest": "~26.0.1",
    "jest-electron": "~0.1.12"
  },
  "jest": {
    "runner": "jest-electron/runner",
    "testEnvironment": "jest-electron/environment",
    "testTimeout": 30000,
    "preset": "ts-jest",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{ts,js}",
      "!src/index.ts",
      "!**/node_modules/**"
    ],
    "testRegex": "/tests/.*-spec\\.ts?$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ]
  }
}
